{
  "name": "signal-stack",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "test:links": "markdown-link-check docs/**/*.md --config .markdown-link-check.json",
    "test:links:verbose": "markdown-link-check docs/**/*.md --config .markdown-link-check.json --verbose",
    "lint:md": "markdownlint docs/**/*.md",
    "lint:md:fix": "markdownlint docs/**/*.md --fix",
    "format": "prettier --write \"docs/**/*.md\" \"src/**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier --check \"docs/**/*.md\" \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "npm run typecheck && npm run lint:md && npm run test:links && npm run build",
    "test:ci": "npm run typecheck && markdownlint docs/**/*.md --config .markdownlint-ci.json && npm run test:links && npm run build",
    "ci:local": "npm run typecheck && npm run lint:md && npm run test:links && npm run build",
    "validate:deploy": "npm run build && npm run serve",
    "test:pr": "npm run typecheck && npm run lint:md && npm run test:links && npm run build",
    "github:test": "act --platform ubuntu-latest=catthehacker/ubuntu:act-latest",
    "github:test:deploy": "act push --platform ubuntu-latest=catthehacker/ubuntu:act-latest --workflows .github/workflows/deploy.yml",
    "github:test:pr": "act pull_request --platform ubuntu-latest=catthehacker/ubuntu:act-latest --workflows .github/workflows/test.yml"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.1",
    "@docusaurus/preset-classic": "3.9.1",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.1",
    "@docusaurus/tsconfig": "3.9.1",
    "@docusaurus/types": "3.9.1",
    "markdown-link-check": "^3.13.7",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "typescript": "~5.6.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  }
}
